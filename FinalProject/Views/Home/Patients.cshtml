@using FinalProject.Models
@{
    ViewBag.Title = "Patients";
}

<container class="me-auto">
    <p>@Html.ActionLink("Create New", "CreatePatient")</p>
</container>
<div class="border border-info">
    <form asp-controller="Home" asp-action="Patients" method="post">
        <input type="search" name="pname" placeholder="Patient's Name" />
        <br />
        <input type="search" name="phone" placeholder="Telephone Number" />
        <br />
        <br />
        <input type="submit" value="Search" />
    </form>
</div>
<hr />
@Html.ActionLink("Export Patients", "ExportPatients", null, new { @class = "btn  btn-primary" })
<form asp-controller="Home" asp-action="Patients" method="post">
    <input type="submit" value="View All" />
</form>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">E-Mail</th>
            <th scope="col">Address</th>
            <th scope="col">Telephone</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">Doctor</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Patient pat in Model)
        {
            <tr>
                <td>@pat.Name</td>
                <td>@pat.Email</td>
                <td>@pat.Address</td>
                <td>@pat.Telephone</td>
                <td>@pat.DateOfBirth</td>
                <td><a href="/Home/DoctorDetails/@pat.Doctor.Id">@pat.Doctor.Name</a></td>
                <td>@Html.ActionLink("Edit", "EditPatient", new { id = pat.Id }) | <a href="/Home/PatientDetails/@pat.Id">Details</a> | @Html.ActionLink("Delete", "DeletePatient", new { id = pat.Id })</td>
            </tr>
        }
    </tbody>
</table>
